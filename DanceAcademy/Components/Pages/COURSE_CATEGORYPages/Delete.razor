@page "/course_categories/delete"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using DataAccess
@inject IDbContextFactory<DanceAcademy.Data.DanceAcademyContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete Category - Dance Academy</PageTitle>

<div class="page-header" style="background: linear-gradient(135deg, #ef5350 0%, #c62828 100%);">
    <h1><i class="bi bi-trash me-2"></i>Delete Category</h1>
    <p>Remove a course category from the system</p>
</div>

@if (category is null)
{
    <div class="loading-spinner">
        <div class="spinner"></div>
        <span>Loading category details...</span>
    </div>
}
else
{
    <div class="delete-warning">
        <div class="delete-warning-icon">
            <i class="bi bi-exclamation-triangle-fill"></i>
        </div>
        <div class="delete-warning-title">Are you sure you want to delete this category?</div>
        <p class="delete-warning-text">This action cannot be undone. The category and all associated enrollments may be affected.</p>
    </div>

    <div class="content-card">
        <div class="content-card-header">
            <div>
                <h2 class="content-card-title mb-0">@category.course_category_name</h2>
                <span class="text-muted">Category ID: @category.ID</span>
            </div>
        </div>
        
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">Category Name</div>
                <div class="detail-value">@(category.course_category_name ?? "-")</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Description</div>
                <div class="detail-value">@(TruncateText(category.description, 100))</div>
            </div>
        </div>
    </div>

    <div class="form-actions">
        <EditForm Model="category" OnValidSubmit="DeleteCategory" FormName="DeleteCategory">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Yes, Delete Category
            </button>
        </EditForm>
        <a href="/course_categories" class="btn btn-secondary">
            <i class="bi bi-x-lg"></i> Cancel
        </a>
    </div>
}

@code {
    private COURSE_CATEGORY? category;

    [SupplyParameterFromQuery]
    private int ID { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        category = await context.COURSE_CATEGORY
            .Where(c => c.ID == ID)
            .Select(c => new COURSE_CATEGORY
            {
                ID = c.ID,
                course_category_name = c.course_category_name,
                description = c.description
            })
            .FirstOrDefaultAsync();

        if (category is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteCategory()
    {
        using var context = DbFactory.CreateDbContext();
        context.COURSE_CATEGORY.Remove(category!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/course_categories");
    }

    private string TruncateText(string? text, int maxLength)
    {
        if (string.IsNullOrEmpty(text)) return "-";
        return text.Length <= maxLength ? text : text.Substring(0, maxLength) + "...";
    }
}
