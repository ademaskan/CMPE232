@page "/employees/delete"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using DataAccess
@inject IDbContextFactory<DanceAcademy.Data.DanceAcademyContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete Employee - Dance Academy</PageTitle>

<div class="page-header" style="background: linear-gradient(135deg, #ef5350 0%, #c62828 100%);">
    <h1><i class="bi bi-trash me-2"></i>Delete Employee</h1>
    <p>Remove an employee from the system</p>
</div>

@if (employee is null)
{
    <div class="loading-spinner">
        <div class="spinner"></div>
        <span>Loading employee details...</span>
    </div>
}
else
{
    <div class="delete-warning">
        <div class="delete-warning-icon">
            <i class="bi bi-exclamation-triangle-fill"></i>
        </div>
        <div class="delete-warning-title">Are you sure you want to delete this employee?</div>
        <p class="delete-warning-text">This action cannot be undone. The employee record will be permanently removed.</p>
    </div>

    <div class="content-card">
        <div class="content-card-header">
            <div>
                <h2 class="content-card-title mb-0">@employee.employee_first_name @employee.employee_last_name</h2>
                <span class="text-muted">Employee ID: @employee.ID</span>
            </div>
        </div>
        
        <div class="details-grid">
            <div class="detail-item">
                <div class="detail-label">Position</div>
                <div class="detail-value">@(employee.position ?? "-")</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Branch</div>
                <div class="detail-value">@branchName</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Hire Date</div>
                <div class="detail-value">@employee.hire_date.ToString("MMMM dd, yyyy")</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Salary</div>
                <div class="detail-value">@(employee.salary?.ToString("C") ?? "-")</div>
            </div>
        </div>
    </div>

    <div class="form-actions">
        <EditForm Model="employee" OnValidSubmit="DeleteEmployee" FormName="DeleteEmployee">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Yes, Delete Employee
            </button>
        </EditForm>
        <a href="/employees" class="btn btn-secondary">
            <i class="bi bi-x-lg"></i> Cancel
        </a>
    </div>
}

@code {
    private EMPLOYEE? employee;
    private string branchName = "-";

    [SupplyParameterFromQuery]
    private int ID { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        
        var data = await context.EMPLOYEE
            .Where(e => e.ID == ID)
            .Select(e => new 
            {
                Employee = new EMPLOYEE
                {
                    ID = e.ID,
                    employee_first_name = e.employee_first_name,
                    employee_last_name = e.employee_last_name,
                    position = e.position,
                    hire_date = e.hire_date,
                    salary = e.salary,
                    BRANCHID = e.BRANCHID
                },
                BranchName = e.BRANCH != null ? e.BRANCH.branch_name : null
            })
            .FirstOrDefaultAsync();

        if (data is null)
        {
            NavigationManager.NavigateTo("notfound");
            return;
        }

        employee = data.Employee;
        branchName = data.BranchName ?? "-";
    }

    private async Task DeleteEmployee()
    {
        using var context = DbFactory.CreateDbContext();
        context.EMPLOYEE.Remove(employee!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/employees");
    }
}
