@page "/employees/edit"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using DataAccess
@inject IDbContextFactory<DanceAcademy.Data.DanceAcademyContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit Employee - Dance Academy</PageTitle>

<div class="page-header">
    <h1><i class="bi bi-pencil-square me-2"></i>Edit Employee</h1>
    <p>Update employee details</p>
</div>

@if (Employee is null)
{
    <div class="loading-spinner">
        <div class="spinner"></div>
        <span>Loading employee details...</span>
    </div>
}
else
{
    <EditForm Model="Employee" OnValidSubmit="UpdateEmployee" FormName="EditEmployee">
        <DataAnnotationsValidator />
        <ValidationSummary class="alert alert-danger" role="alert"/>
        <input type="hidden" name="Employee.ID" value="@Employee.ID" />
        
        <div class="form-section">
            <h3 class="form-section-title"><i class="bi bi-person me-2"></i>Personal Information</h3>
            <div class="form-row">
                <div class="mb-3">
                    <label for="employee_first_name" class="form-label">First Name</label>
                    <InputText id="employee_first_name" @bind-Value="Employee.employee_first_name" class="form-control" placeholder="Enter first name" />
                    <ValidationMessage For="() => Employee.employee_first_name" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="employee_last_name" class="form-label">Last Name</label>
                    <InputText id="employee_last_name" @bind-Value="Employee.employee_last_name" class="form-control" placeholder="Enter last name" />
                    <ValidationMessage For="() => Employee.employee_last_name" class="text-danger" />
                </div>
            </div>
        </div>

        <div class="form-section">
            <h3 class="form-section-title"><i class="bi bi-briefcase me-2"></i>Employment Details</h3>
            <div class="form-row">
                <div class="mb-3">
                    <label for="position" class="form-label">Position</label>
                    <InputText id="position" @bind-Value="Employee.position" class="form-control" placeholder="e.g. Dance Instructor" />
                    <ValidationMessage For="() => Employee.position" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="branchid" class="form-label">Branch</label>
                    <InputSelect id="branchid" @bind-Value="Employee.BRANCHID" class="form-control">
                        <option value="">Select a branch...</option>
                        @if (branches != null)
                        {
                            @foreach (var branch in branches)
                            {
                                <option value="@branch.ID">@branch.branch_name</option>
                            }
                        }
                    </InputSelect>
                    <ValidationMessage For="() => Employee.BRANCHID" class="text-danger" />
                </div>
            </div>
            <div class="form-row">
                <div class="mb-3">
                    <label for="hire_date" class="form-label">Hire Date</label>
                    <InputDate id="hire_date" @bind-Value="Employee.hire_date" class="form-control" />
                    <ValidationMessage For="() => Employee.hire_date" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="salary" class="form-label">Salary</label>
                    <InputNumber id="salary" @bind-Value="Employee.salary" class="form-control" placeholder="0.00" />
                    <ValidationMessage For="() => Employee.salary" class="text-danger" />
                </div>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-lg"></i> Save Changes
            </button>
            <a href="/employees" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </EditForm>
}

@code {
    [SupplyParameterFromQuery]
    private int ID { get; set; }

    private EMPLOYEE? Employee { get; set; }
    private List<BRANCH>? branches;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        
        branches = await context.BRANCH
            .Select(b => new BRANCH { ID = b.ID, branch_name = b.branch_name })
            .ToListAsync();

        Employee = await context.EMPLOYEE
            .Where(e => e.ID == ID)
            .Select(e => new EMPLOYEE
            {
                ID = e.ID,
                employee_first_name = e.employee_first_name,
                employee_last_name = e.employee_last_name,
                position = e.position,
                hire_date = e.hire_date,
                salary = e.salary,
                BRANCHID = e.BRANCHID
            })
            .FirstOrDefaultAsync();

        if (Employee is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task UpdateEmployee()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Employee!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!EmployeeExists(Employee!.ID))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/employees");
    }

    private bool EmployeeExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.EMPLOYEE.Any(e => e.ID == id);
    }
}
