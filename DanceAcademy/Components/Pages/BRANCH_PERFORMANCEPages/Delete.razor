@page "/branch_performances/delete"
@using Microsoft.EntityFrameworkCore
@using DataAccess
@inject IDbContextFactory<DanceAcademy.Data.DanceAcademyContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>BRANCH_PERFORMANCE</h2>
    <hr />
    @if (branch_performance is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">BRANCHID</dt>
            <dd class="col-sm-10">@branch_performance.BRANCHID</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">month</dt>
            <dd class="col-sm-10">@branch_performance.month</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">year</dt>
            <dd class="col-sm-10">@branch_performance.year</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">revenue</dt>
            <dd class="col-sm-10">@branch_performance.revenue</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">expenses</dt>
            <dd class="col-sm-10">@branch_performance.expenses</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">net_profit</dt>
            <dd class="col-sm-10">@branch_performance.net_profit</dd>
        </dl>
        <EditForm method="post" Model="branch_performance" OnValidSubmit="DeleteBRANCH_PERFORMANCE" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(branch_performance is null)">Delete</button> |
            <a href="/branch_performances">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private BRANCH_PERFORMANCE? branch_performance;

    [SupplyParameterFromQuery]
    private int ID { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        branch_performance = await context.BRANCH_PERFORMANCE.FirstOrDefaultAsync(m => m.ID == ID);

        if (branch_performance is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteBRANCH_PERFORMANCE()
    {
        using var context = DbFactory.CreateDbContext();
        context.BRANCH_PERFORMANCE.Remove(branch_performance!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/branch_performances");
    }
}
