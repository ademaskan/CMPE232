@page "/branch_performances/edit"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using DataAccess
@inject IDbContextFactory<DanceAcademy.Data.DanceAcademyContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit Performance Record - Dance Academy</PageTitle>

<div class="page-header">
    <h1><i class="bi bi-pencil-square me-2"></i>Edit Performance Record</h1>
    <p>Update branch performance data</p>
</div>

@if (Performance is null)
{
    <div class="loading-spinner">
        <div class="spinner"></div>
        <span>Loading performance data...</span>
    </div>
}
else
{
    <EditForm Model="Performance" OnValidSubmit="UpdatePerformance" FormName="EditPerformance">
        <DataAnnotationsValidator />
        <ValidationSummary class="alert alert-danger" role="alert"/>
        <input type="hidden" name="Performance.ID" value="@Performance.ID" />
        
        <div class="form-section">
            <h3 class="form-section-title"><i class="bi bi-building me-2"></i>Branch & Period</h3>
            <div class="form-row">
                <div class="mb-3">
                    <label for="branchid" class="form-label">Branch</label>
                    <InputSelect id="branchid" @bind-Value="Performance.BRANCHID" class="form-control">
                        <option value="0">Select a branch...</option>
                        @if (branches != null)
                        {
                            @foreach (var branch in branches)
                            {
                                <option value="@branch.ID">@branch.branch_name</option>
                            }
                        }
                    </InputSelect>
                    <ValidationMessage For="() => Performance.BRANCHID" class="text-danger" />
                </div>
            </div>
            <div class="form-row">
                <div class="mb-3">
                    <label for="month" class="form-label">Month</label>
                    <InputSelect id="month" @bind-Value="Performance.month" class="form-control">
                        <option value="1">January</option>
                        <option value="2">February</option>
                        <option value="3">March</option>
                        <option value="4">April</option>
                        <option value="5">May</option>
                        <option value="6">June</option>
                        <option value="7">July</option>
                        <option value="8">August</option>
                        <option value="9">September</option>
                        <option value="10">October</option>
                        <option value="11">November</option>
                        <option value="12">December</option>
                    </InputSelect>
                    <ValidationMessage For="() => Performance.month" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="year" class="form-label">Year</label>
                    <InputNumber id="year" @bind-Value="Performance.year" class="form-control" />
                    <ValidationMessage For="() => Performance.year" class="text-danger" />
                </div>
            </div>
        </div>

        <div class="form-section">
            <h3 class="form-section-title"><i class="bi bi-currency-dollar me-2"></i>Financial Data</h3>
            <div class="form-row">
                <div class="mb-3">
                    <label for="revenue" class="form-label">Revenue</label>
                    <InputNumber id="revenue" @bind-Value="Performance.revenue" class="form-control" placeholder="0.00" />
                    <ValidationMessage For="() => Performance.revenue" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="expenses" class="form-label">Expenses</label>
                    <InputNumber id="expenses" @bind-Value="Performance.expenses" class="form-control" placeholder="0.00" />
                    <ValidationMessage For="() => Performance.expenses" class="text-danger" />
                </div>
            </div>
            <div class="form-row">
                <div class="mb-3">
                    <label for="net_profit" class="form-label">Net Profit</label>
                    <InputNumber id="net_profit" @bind-Value="Performance.net_profit" class="form-control" placeholder="0.00" />
                    <ValidationMessage For="() => Performance.net_profit" class="text-danger" />
                </div>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-lg"></i> Save Changes
            </button>
            <a href="/branch_performances" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </EditForm>
}

@code {
    [SupplyParameterFromQuery]
    private int ID { get; set; }

    private BRANCH_PERFORMANCE? Performance { get; set; }
    private List<BRANCH>? branches;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        
        branches = await context.BRANCH
            .Select(b => new BRANCH { ID = b.ID, branch_name = b.branch_name })
            .ToListAsync();

        Performance = await context.BRANCH_PERFORMANCE
            .Where(bp => bp.ID == ID)
            .Select(bp => new BRANCH_PERFORMANCE
            {
                ID = bp.ID,
                BRANCHID = bp.BRANCHID,
                month = bp.month,
                year = bp.year,
                revenue = bp.revenue,
                expenses = bp.expenses,
                net_profit = bp.net_profit
            })
            .FirstOrDefaultAsync();

        if (Performance is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task UpdatePerformance()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Performance!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!PerformanceExists(Performance!.ID))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/branch_performances");
    }

    private bool PerformanceExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.BRANCH_PERFORMANCE.Any(e => e.ID == id);
    }
}
